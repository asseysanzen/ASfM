<h3>Profile Edit</h3>

<%= form_for @user, url: users_users_fix_path do |f| %>

  <div class="field">
    <%= f.label :Icon %><br />
    <%= f.attachment_field :user_image %>
  </div>

  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Twitter %><br />
    <%= f.text_field :twitter_account, autofocus: true, autocomplete: "twitter_account" %>
  </div>

  <div class="field">
    <%= f.label :Instagram %><br />
    <%= f.text_field :instagram_account, autofocus: true, autocomplete: "instagram_account" %>
  </div>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Edit" %>
  </div>
<% end %>

