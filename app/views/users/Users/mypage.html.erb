<div class="midasi">
	<h4 class="midasitext">Mypage</h4>
</div>

<div class="sidebar">
	<%= link_to "お気に入り", users_posts_favorite_path %>
	<%= link_to "フォロー投稿", users_posts_follow_path %>
	<%= link_to "購入履歴", users_purchases_buy_path %>
	<%= link_to "販売履歴", users_purchases_sell_path %>
	<%= link_to "売上分析", users_purchases_data_path %>
	<%= link_to "プロフィール編集", users_users_fix_path %>
	<%= link_to "配送先", users_shipping_addresses_path %>
</div>

<div class="customer_contents">
		<div class="customer_content">
			<div class="explain_text">
				<%= attachment_image_tag @user, :user_image, size: "100x100" %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p></p>Profile</div>
			<div class="explain_text">
				<%= @user.profile %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Twitter</p></div>
			<div class="explain_text">
				<%= @user.twitter_account %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Instagram</p></div>
			<div class="explain_text">
				<%= @user.instagram_account %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Follower</p></div>
				<%= link_to users_user_followers_path(@user.id) do %>
					<%= @user.followed.count %>
				<% end %>
			<div class="explain_text">
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Following</p></div>
				<%= link_to users_user_follows_path(@user.id) do %>
					<%= @user.follower.count %>
				<% end %>
			<div class="explain_text">
			</div>
		</div>
</div>

<div class="addproduct">
	<%= link_to "", new_users_post_path, class:'glyphicon glyphicon-plus-sign' %>
</div>

  <% @posts.each do |post| %>
    <div>
      <div>
        <%= link_to users_post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size:"150x150" %>
        <% end %>
      </div>
      <div>
        <%= post.price %>円
      </div>
      <div>
        <%= post.status %>
      </div>
    </div>
  <% end %>