<div class="midasi">
	<h4 class="midasitext"><%= @user.name %></h4>
</div>

<div class="customer_contents">
		<div class="customer_content">
			<div class="explain_text">
				<%= attachment_image_tag @user, :user_image, size: "100x100" %>
			</div>
		</div>
		<div>
			<% if user_signed_in? %>
				<% if current_user != @user %>
            		<% if current_user.following?(@user) %>
              			<%= link_to 'Unfollow', users_user_relationships_path(@user.id), method: :delete %>
            		<% else %>
              			<%= link_to 'follow', users_user_relationships_path(@user.id), method: :POST %>
            		<% end %>
          		<% end %>
          	<% end %>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p></p>Profile</div>
			<div class="explain_text">
				<%= @user.profile %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Twitter</p></div>
			<div class="explain_text">
				<%= @user.twitter_account %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Instagram</p></div>
			<div class="explain_text">
				<%= @user.instagram_account %>
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Follower</p></div>
				<%= link_to users_user_followers_path(@user.id) do %>
					<%= @user.followed.count %>
				<% end %>
			<div class="explain_text">
			</div>
		</div>
		<div class="customer_content">
			<div class="admin_c_label"><p>Following</p></div>
				<%= link_to users_user_follows_path(@user.id) do %>
					<%= @user.follower.count %>
				<% end %>
			<div class="explain_text">
			</div>
		</div>
</div>

  <% @posts.each do |post| %>
    <div>
      <div>
        <%= link_to users_post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size:"150x150" %>
        <% end %>
      </div>
      <div>
        <%= post.price %>å††
      </div>
    </div>
  <% end %>