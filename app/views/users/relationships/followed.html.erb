<h2>Followed Users</h2>

<% if @users.count > 0 %>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Name</th>
			<th>Twitter</th>
			<th>Instagram</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :user_image, size: "80x80" %></td>
			<td><a href="<%= users_user_path(user.id) %>"><%= user.name %></a></td>
			<td><%= user.twitter_account %></td>
			<td><%= user.instagram_account %></td>
			<td>
				<% if user_signed_in? %>
				<% if current_user != user %>
            		<% if current_user.following?(user) %>
              			<%= link_to 'Unfollow', users_user_relationships_path(user.id), method: :delete %>
            		<% else %>
              			<%= link_to 'follow', users_user_relationships_path(user.id), method: :POST %>
            		<% end %>
          		<% end %>
          		<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% else %>
	<p>No User</p>
<% end %>
