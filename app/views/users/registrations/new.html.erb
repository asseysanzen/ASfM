<%= render "devise/shared/error_messages", resource: resource %>
<div class="sign_up">
  <div>
    <h3>会員登録<span class="fas fa-user-plus" aria-hidden="true"></span></h3>
  </div>
  <div class="sign_up_content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :プロフィール画像 %><br />
        <%= f.attachment_field :user_image %>
      </div>

      <div class="field">
        <%= f.label :名前 %><br />
        <div class="field_text">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :Twitter %><br />
        <div class="field_text">
          <%= f.text_field :twitter_account, autofocus: true, autocomplete: "twitter_account" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :Instagram %><br />
        <div class="field_text">
          <%= f.text_field :instagram_account, autofocus: true, autocomplete: "instagram_account" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :メール %><br />
        <div class="field_text">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <div class="field_text">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <div class="field_text">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
  <div class="warning"><p>※名前、メール、パスワードは必須</p></div>
</div>