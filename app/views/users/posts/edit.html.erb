<div class="midasi">
	<h3 class="midasitext">Editting Post</h3>
</div>

<div class="product_form">
<%= form_for @post, url: users_post_path(@post.id) do |f| %>
	<div class="admin_picture">
		<div class="picture">
			<%= f.attachment_field :image %>
		</div>
	</div>

	<div class="explain">
		<div class="product_name">
			<div class="admin_label">
				<%= f.label :Item %>
			</div>
			<div class="explain_text">
				<%= f.text_field :item_name %>
			</div>
		</div>
		<div class="product_description">
			<div class="admin_label">
				<%= f.label :Description %>
			</div>
			<div class="explain_text">
				<%= f.text_area :description %>
			</div>
		</div>
		<div class="product_genre">
			<div class="admin_label">
				<%= f.label :Genre %>
			</div>
			<div class="explain_text">
				<%= f.collection_select :genre_id, Genre.where("status = ? OR status = ?", 0,1), :id, :kind %>
			</div>
		</div>
		<div class="product_price">
			<div class="admin_label">
				<%= f.label :Price %>
			</div>
			<div class="explain_text">
				<%= f.text_field :price %>å††
			</div>
		</div>
		<div class="product_price">
			<div class="admin_label">
				<%= f.label :status %>
			</div>
			<div class="explain_text">
				<%= f.select :status, Post.statuses.keys.to_a %>
			</div>
		</div>
		<div class="admin_button">
  			<%= f.submit 'Update' %>
  		</div>
  	</div>
<% end %>
<div class="admin_button">
  			<%= link_to "Delete", users_post_path(@post.id), method: :delete, class:"btn btn-danger" %>
  		</div>
</div>