<div class="midasi">
	<h3 class="midasitext">Shipping Addresses</h3>
</div>

<div class="paymethod">
	<div class="genre_form">
		<%= form_for @shipping_address_new, url: users_shipping_addresses_path do |f| %>
			<%= f.label :Postal_Code %>
			<%= f.text_field :postal_code %>
			<%= f.label :Address %>
			<%= f.text_field :address %>
  			<%= f.submit 'Create' %>
  		<% end %>
	</div>

	<div class="genrelists">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>Postal Code</th>
					<th>Address</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @shipping_addresses.each do |shipping_address| %>
				<tr>
					<td><%= shipping_address.postal_code %></td>
					<td><%= shipping_address.address %>
					<td><div class="btn btn-primary active"><%= link_to "Edit", edit_users_shipping_address_path(shipping_address.id) %></div></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>