<% if admin_signed_in? %>
	<td><div class="td_text"><%= user.id %></div></td>
	<td>
		<div class="icons">
			<%= link_to admins_user_path(user.id) do %>
				<%= attachment_image_tag(user, :user_image, size: "80x80", fallback: asset_path('no_image.jpg')) %>
			<% end %>
		</div>
	</td>
	<td><div class="td_text"><%= user.name %></div></td>
	<td><div class="td_text"><%= user.twitter_account %></div></td>
	<td><div class="td_text"><%= user.instagram_account %></div></td>
	<td><div class="td_text"><%= user.status %></div></td>
<% else %>
	<td>
		<%= link_to users_user_path(user.id) do %>
			<%= attachment_image_tag(user, :user_image, size: "80x80", fallback: asset_path('no_image.jpg')) %>
		<% end %>
	</td>
	<td><div class="td_text"><%= user.name %></div></td>
	<td><div class="td_text"><%= user.twitter_account %></div></td>
	<td><div class="td_text"><%= user.instagram_account %></div></td>
	<td>
		<div class="td_follow">
			<%= render 'partials/follow', user: user %>
		</div>
	</td>
<% end %>