<div class="post">
    <div class="post_image">
        <%= attachment_image_tag post, :image, size:"300x300" %>
    </div>

    <div class="favorite post_<%= post.id %>">
        <%= render 'partials/favorite', post: post %>
    </div>

    <% if post.status == "販売中" %>
        <div class="price_information">
            <%= post.price %>円
        </div>
    <% else %>
        <div class="price_information">
            <%= post.status %>
        </div>
    <% end %>
</div>

<div class="post_information">
    <div class="information_content">
        <div class="information_label">
            <p>アイテム</p>
        </div>
        <div class="information_text">
            <%= post.item_name %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
            <p>ジャンル</p>
        </div>
        <div class="information_text">
            <%= post.genre.kind %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
            <p>詳細</p>
        </div>
        <div class="information_text">
            <%= post.description %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
            <% if admin_signed_in? %>
                <a href="<%= admins_user_path(post.user.id) %>"><%= post.user.name %></a>
            <% else %>
                <a href="<%= users_user_path(post.user.id) %>"><%= post.user.name %></a>
            <% end %>
        </div>
        <div class="information_text">
            <%= link_to "#{post.user.twitter_account}", "https://twitter.com/#{post.user.twitter_account}", target: :_blank, class:"fab fa-twitter" %>
        </div>
        <div class="information_text">
            <%= link_to "#{post.user.instagram_account}", "https://www.instagram.com/#{post.user.instagram_account}/", target: :_blank, class:"fab fa-instagram" %>
          </div>
    </div>

    <% if admin_signed_in? %>
        <div class="information_content">
            <div class="admin_label">
                <p>ステータス</p>
            </div>
            <div class="information_text">
                <%= post.status %>
            </div>
        </div>
    <% end %>

    <% if admin_signed_in? %>
        <%= link_to "編集", edit_admins_post_path(post.id), class:"btn btn-primary active" %>
        <%= link_to "削除", admins_post_path(post.id), method: :delete, class:"btn btn-danger active" %>
    <% elsif current_user == post.user && post.status == "販売中" %>
        <%= link_to "編集", edit_users_post_path(post.id), class:"btn btn-primary active" %>
        <%= link_to "削除", users_post_path(post.id), method: :delete, class:"btn btn-danger active" %>
    <% end %>
</div>
