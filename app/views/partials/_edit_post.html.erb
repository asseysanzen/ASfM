<div class="headline">
	<h3 class="headline_text">投稿編集</h3>
</div>

<div class="product_form">
	<% if admin_signed_in? %>
		<%= form_for post, url: admins_post_path(post.id) do |f| %>
			<div class="admin_picture">
				<div class="picture">
					<%= f.attachment_field :image %>
				</div>
			</div>

			<div class="explain">
				<div class="product_name">
					<div class="admin_label">
						<%= f.label :アイテム %>
					</div>
					<div class="explain_text">
						<%= f.text_field :item_name %>
					</div>
				</div>
				<div class="product_description">
					<div class="admin_label">
						<%= f.label :詳細 %>
					</div>
					<div class="explain_text">
						<%= f.text_area :description %>
					</div>
				</div>
				<div class="product_genre">
					<div class="admin_label">
						<%= f.label :ジャンル %>
					</div>
					<div class="explain_text">
						<%= f.collection_select :genre_id, Genre.where("status = ? OR status = ?", 0,1), :id, :kind %>
					</div>
				</div>
				<div class="product_price">
					<div class="admin_label">
						<%= f.label :価格 %>
					</div>
					<div class="explain_text">
						<%= f.text_field :price %>円
					</div>
				</div>
				<div class="product_price">
					<div class="admin_label">
							<%= f.label :status %>
					</div>
					<div class="explain_text">
						<%= f.select :status, Post.statuses.keys.to_a %>
					</div>
				</div>
				<div class="admin_button">
  					<%= f.submit '更新' %>
  				</div>
  			</div>
		<% end %>

	<% else %>
		<%= form_for post, url: users_post_path(post.id) do |f| %>
			<div class="admin_picture">
				<div class="picture">
					<%= f.attachment_field :image %>
				</div>
			</div>

			<div class="explain">
				<div class="product_name">
					<div class="admin_label">
						<%= f.label :アイテム %>
					</div>
					<div class="explain_text">
						<%= f.text_field :item_name %>
					</div>
				</div>
				<div class="product_description">
					<div class="admin_label">
						<%= f.label :詳細 %>
					</div>
					<div class="explain_text">
						<%= f.text_area :description %>
					</div>
				</div>
				<div class="product_genre">
					<div class="admin_label">
						<%= f.label :ジャンル %>
					</div>
					<div class="explain_text">
						<%= f.collection_select :genre_id, Genre.where("status = ? OR status = ?", 0,1), :id, :kind %>
					</div>
				</div>
				<div class="product_price">
					<div class="admin_label">
						<%= f.label :価格 %>
					</div>
					<div class="explain_text">
						<%= f.text_field :price %>円
					</div>
				</div>
				<% if post.status == "販売中" %>
					<div class="admin_button">
  						<%= f.submit '更新' %>
  					</div>
  				<% end %>
  			</div>
		<% end %>
	<% end %>
</div>