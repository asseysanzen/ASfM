<% posts.each do |post| %>
    <div>
        <div>
            <% if admin_signed_in? %>
                <%= link_to admins_post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, size:"150x150" %>
                 <% end %>
            <% else %>
                <%= link_to users_post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, size:"150x150" %>
                 <% end %>
            <% end %>
        </div>

        <div>
            <%= render 'partials/favorite', post: post %>
        </div>

        <% if admin_signed_in? %>
            <div>
                <%= post.price %>円
            </div>
            <div>
                <%= post.status %>
            </div>
        <% else %>
            <% if post.status == "販売中" %>
                <div>
                    <%= post.price %>円
                </div>
            <% else %>
                <div>
                    <%= post.status %>
                </div>
            <% end %>
        <% end %>
    </div>
<% end %>