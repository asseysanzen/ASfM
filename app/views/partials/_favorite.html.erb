<% if current_user %>
    <% if post.favorited_by?(current_user) %>
        <%= link_to users_post_favorites_path(post), :style=>"color:gray;", method: :delete, remote: true do %>
            <i class="glyphicon glyphicon-star" aria-hidden="true" style="color: gray;"></i>
        <% end %>
        <%= post.favorites.count %>
    <% else %>
        <%= link_to users_post_favorites_path(post), :style=>"color:gray;", method: :post, remote: true do %>
            <i class="glyphicon glyphicon-star-empty" aria-hidden="true"></i>
        <% end %>
        <%= post.favorites.count %>
    <% end %>
<% else %>
    <i class="glyphicon glyphicon-star-empty" aria-hidden="true"></i>
    <%= post.favorites.count %>
<% end %>