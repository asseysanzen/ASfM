<% if user_signed_in? %>
	<% if current_user != user %>
        <% if current_user.following?(user) %>
            <%= link_to 'Unfollow', users_user_relationships_path(user.id), method: :delete, remote: true, class:"btn btn-default" %>
        <% else %>
              <%= link_to 'follow', users_user_relationships_path(user.id), method: :POST, remote: true, class:"btn btn-default" %>
        <% end %>
    <% end %>
<% end %>