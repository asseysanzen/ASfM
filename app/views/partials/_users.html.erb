<table class="table table-hover table-inverse users_table">
	<thead>
		<tr>
			<% if admin_signed_in? %>
				<th>ID</th>
				<th></th>
				<th>Name</th>
				<th><i class="fab fa-twitter"></i></th>
				<th><i class="fab fa-instagram"></i></th>
				<th>Status</th>
			<% else %>
				<th></th>
				<th>Name</th>
				<th><i class="fab fa-twitter"></i></i></th>
				<th><i class="fab fa-instagram"></i></th>
				<th></th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% users.each do |user| %>
			<tr>
				<% if admin_signed_in? %>
					<td><%= user.id %></td>
					<td>
						<div class="icons">
						<%= link_to admins_user_path(user.id) do %>
							<%= attachment_image_tag(user, :user_image, size: "80x80", fallback: "no_image.jpg") %>
						<% end %>
						</div>
					</td>
					<td><div class="td_content"><%= user.name %></div></td>
					<td><%= user.twitter_account %></td>
					<td><%= user.instagram_account %></td>
					<td><%= user.status %></td>
				<% else %>
					<td>
						<%= link_to users_user_path(user.id) do %>
							<%= attachment_image_tag(user, :user_image, size: "80x80", fallback: "no_image.jpg") %>
						<% end %>
					</td>
					<td><%= user.name %></td>
					<td><%= user.twitter_account %></td>
					<td><%= user.instagram_account %></td>
					<td class="user_<%= user.id %>">
						<%= render 'partials/follow', user: user %>
					</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="paginate">
    <%= paginate @users %>
</div>