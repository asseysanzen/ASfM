<div class="midasi">
	<h3 class="midasitext">購入詳細</h3>
</div>

<div class="admin_picture">
    <% if admin_signed_in? %>
        <%= link_to admins_post_path(purchase.post.id) do %>
            <%= attachment_image_tag purchase.post, :image, size:"200x200" %>
        <% end %>
    <% else %>
        <%= link_to users_post_path(purchase.post.id) do %>
            <%= attachment_image_tag purchase.post, :image, size:"200x200" %>
        <% end %>
    <% end %>
</div>
<div class="explain">
    <div class="explain_content">
        <div class="admin_label">
            <p>アイテム</p>
        </div>
        <div class="explain_text">
            <%= purchase.post.item_name %>
        </div>
    </div>
    <div class="explain_content">
        <div class="admin_label">
            <p>詳細</p>
        </div>
        <div class="explain_text">
            <%= purchase.post.description %>
        </div>
    </div>
    <div class="explain_content">
        <div class="admin_label">
            <p>ジャンル</p>
        </div>
        <div class="explain_text">
            <%= purchase.post.genre.kind %>
        </div>
    </div>
    <div class="explain_content">
        <div class="admin_label">
            <p>価格</p>
        </div>
        <div class="explain_text">
            <%= purchase.post.price %>円
        </div>
    </div>
</div>