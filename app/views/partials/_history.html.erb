<div class="post">
    <div class="post_image">
        <% if admin_signed_in? %>
            <%= link_to admins_post_path(purchase.post.id) do %>
                <%= attachment_image_tag purchase.post, :image, size:"300x300" %>
            <% end %>
        <% else %>
            <%= link_to users_post_path(purchase.post.id) do %>
                <%= attachment_image_tag purchase.post, :image, size:"300x300" %>
            <% end %>
        <% end %>
    </div>

    <div class="price_information">
        <%= purchase.post.price.to_s(:delimited) %>円
    </div>
</div>

<div class="post_information">
    <div class="information_content">
        <div class="information_label">
            <p>アイテム</p>
        </div>
        <div class="information_text">
            <%= purchase.post.item_name %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
            <p>ジャンル</p>
        </div>
        <div class="information_text">
            <%= purchase.post.genre.kind %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
            <p>詳細</p>
        </div>
        <div class="information_text">
            <%= purchase.post.description %>
        </div>
    </div>

    <div class="information_content">
        <div class="information_label">
           <p>配送先</p>
        </div>
        <% if action_name == 'confirm' %>
            <div class="information_text">
                <%= purchase.shipping_address.postal_code.insert(3, '-') %>
            </div>
            <div class="information_text">
                <%= purchase.shipping_address.address %>
            </div>
        <% else %>
            <div class="information_text">
                <%= purchase.postal_code %>
            </div>
            <div class="information_text">
                <%= purchase.address %>
            </div>
        <% end %>
    </div>
</div>