<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>商品</th>
			<th>販売者</th>
			<th>ステータス</th>
			<th>購入者</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @purchases.each do |purchase| %>
		<tr>
			<% if user_signed_in? %>
			<td><a href="<%= users_purchase_path(purchase.id) %>"><%= purchase.created_at%></a></td>
			<td><%= purchase.post.item_name %></td>
			<td><%= purchase.selling_user.name %></td>
			<td><%= purchase.selling_status %></td>
			<td><%= purchase.buying_user.name %></td>
			<td><%= purchase.buying_status %></td>
			<% else %>
			<td><a href="<%= admins_purchase_path(purchase.id) %>"><%= purchase.created_at%></a></td>
			<td><%= purchase.post.item_name %></td>
			<td><%= purchase.post.user.name %></td>
			<td><%= purchase.selling_status %></td>
			<td><%= purchase.buying_user.name %></td>
			<td><%= purchase.buying_status %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="paginate">
    <%= paginate @purchases %>
</div>