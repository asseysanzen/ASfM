<div>
    <h4>コメント<i class="fas fa-comments"></i></h4>
        <div>
            <% post.comments.each do |comment| %>
                <div class="comment_text">
                    <%= link_to users_user_path(post.user.id) do %>
                        <%= comment.user.name %>
                    <% end %>
                    <%= comment.post_comment %>
                    <% if comment.user == current_user or post.user == current_user %>
                        <%= link_to '', users_post_comment_path(post, comment), method: :delete, class:"fas fa-trash fa trash_black " %>
                    <% elsif admin_signed_in? %>
                        <%= link_to '', users_post_comment_path(post, comment), method: :delete, class:"fas fa-trash fa trash_black " %>
                    <% end %>
                </div>
            <% end %>
        </div>
</div>

<% if user_signed_in? %>
    <div class="form_comment">
        <%= form_for [post, comment], url: users_post_comments_path(post) do |f| %>
            <div class="text_comment">
                <%= f.text_area :post_comment, rows:'3', class:"form-control comment_form", placeholder: "Comment"%>
            </div>
            <div class="submit_comment">
                <%= f.submit '送信' %>
            </div>
        <% end %>
    </div>
<% end %>

