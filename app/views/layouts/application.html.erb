<!DOCTYPE html>
<html>
  <head>
    <title>ASfM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
     <header>
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <% if admin_signed_in? %>
            <%= link_to 'ASfM', admins_top_path %>
          <% else %>
            <%= link_to 'ASfM', root_path %>
          <% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'About', users_posts_about_path %></li>
              <li><%= link_to 'マイページ', users_users_mypage_path %></li>
              <li><%= link_to 'アイテム', users_posts_path %></li>
              <li><%= link_to 'ユーザー', users_users_path %></li>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt" %></li>
            <% elsif admin_signed_in? %>
              <li><%= link_to 'アイテム', admins_posts_path %></li>
              <li><%= link_to 'ユーザー', admins_users_path %></li>
              <li><%= link_to '購入履歴', admins_purchases_path %></li>
              <li><%= link_to 'ジャンル', admins_genres_path %></li>
              <li><%= link_to '支払い関連', admins_payment_methods_path %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"fas fa-sign-out-alt" %></li>
            <% else %>
              <li><%= link_to 'About', users_posts_about_path %></li>
              <li><%= link_to 'アイテム', users_posts_path %></li>
              <li><%= link_to 'ユーザー', users_users_path %></li>
              <li><%= link_to '会員登録',  new_user_registration_path, class:"fas fa-user-plus" %></li>
              <li><%= link_to 'ログイン', new_user_session_path, class:"fas fa-sign-in-alt" %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <div class="container">
      <div class="main">
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
