<div class="midasi">
	<h3 class="midasitext">ジャンル一覧・追加</h3>
</div>

<div class="genre_form">
	<%= form_for @genre_new, url: admins_genres_path do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :kind %>
		<%= f.select :status, Genre.statuses.keys.to_a %>
  		<%= f.submit '追加' %>
  	<% end %>
</div>
<div class="genrelists">
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
					<%= link_to admins_genre_path(genre.id) do %>
						<%= genre.kind %>
					<% end %>
				</td>
				<td><%= genre.status %></td>
				<td><div class="btn btn-primary active"><%= link_to "編集", edit_admins_genre_path(genre.id) %></div></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>